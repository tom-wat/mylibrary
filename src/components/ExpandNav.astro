<style>
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  button {
    display: inline-block;
    padding: 0;
  }
  .wrapper {
    background-color: aqua;
    min-width: 70vw;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    position: relative;
  }
  .logo {
    width: 120px;
    background-color: #bbb;
  }
  .list {
    background-color: #ccc;
    grid-column: 3/4;
    justify-self: end;
    display: flex;
    & .item:not(:last-child) {
      margin-right: 1rem;
    }
  }
  .item {
    background-color: #ddd;
  }
  .list-button {
    font-size: 1rem;
    background-color: #ddd;
    border: 0;
    padding: 0.5rem 1rem;
    @media (any-hover: hover) {
      &:hover {
        background-color: #eee;
      }
    }
  }
  .sub-list {
    background-color: aquamarine;
    display: none;
    flex-wrap: wrap;
    width: 100%;
    padding: 1rem;
    box-sizing: border-box;
    position: absolute;
    top: 34px;
    left: 0;
    &.open {
      display: flex;
    }
    & .sub-item:not(:last-child) {
      margin-right: 1rem;
    }
    &::after {
      content: "";
      width: 100vw;
      height: 300px;
      position: fixed;
      left: 0;
      top: 42px;
      background-color: #aaa;
      z-index: -1;
    }
  }
</style>

<script>
  const listButton = document.querySelector(".list-button");
  const subList = document.querySelector(".sub-list");

  listButton.addEventListener("click", () => {
    subList.classList.toggle("open");
  });
</script>
