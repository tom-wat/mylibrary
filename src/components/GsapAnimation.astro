<div class="rectangle"></div>
<style>
  .rectangle {
    margin-top: 1rem;
    width: 300px;
    height: 300px;
    background-color: green;
    border-radius: 10rem;
  }
</style>
<script>
  import gsap from "gsap";
  const rect = document.querySelector(".rectangle");

  const animation = () => {
    const tl = gsap.timeline({ repeat: 1, yoyo: true });
    tl.from(rect, { x: 0 }).to(rect, {
      scale: 0.8,
      duration: 0.3,
      x: -100,
      ease: "power3.out",
    });
  };
  rect.addEventListener("click", animation);
</script>
